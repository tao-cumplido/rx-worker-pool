{
	"compilerOptions": {
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"useUnknownInCatchVariables": true,
		"module": "nodenext",
		"isolatedModules": true,
		"exactOptionalPropertyTypes": true,
		"lib": ["es2023"],
		"rootDir": "src",
		"outDir": "dist",
		"sourceMap": true,
		"skipLibCheck": true,
	},
	"include": ["src/**/*.ts"],
	"exclude": ["src/**/*.test.ts", "eslint-typegen.d.ts"]
}
